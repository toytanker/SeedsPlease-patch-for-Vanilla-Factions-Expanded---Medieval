<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
  <Operation Class="PatchOperationAttributeAdd">
    <xpath>Defs/SeedsPlease.RecipeDef</xpath>
    <attribute>ParentName</attribute>
    <value>ExtractSeed</value>
    <success>Always</success>
  </Operation>
  
  <Operation Class="PatchOperationAttributeAdd">
    <xpath>Defs/SeedsPlease.SeedDef</xpath>
    <attribute>ParentName</attribute>
    <value>SeedBase</value>
    <success>Always</success>
  </Operation>

<!-- Compatibility checker for:
Vanilla Factions Expanded - Medieval 
VGP Vegetable Garden

If both are loaded, removes VGP's grapes
-->  
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Factions Expanded - Medieval</li>
    </mods>
    <match Class="PatchOperationSequence">
          <success>Always</success>
          <operations>
            <li Class="PatchOperationFindMod">
                  <mods>
                      <li>VGP Vegetable Garden</li>
                  </mods>
                  <match Class="PatchOperationSequence">
                      <success>Always</success>
                        <Operation Class="PatchOperationRemove">
                            <xpath>Defs/ThingDef[defName="Plantgrape"]</xpath>
                        </Operation> 
                  </match>
              </li>
          </operations>
      </match>
  </Operation>
</Patch>
 
